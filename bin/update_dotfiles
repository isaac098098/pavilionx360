cp -r ~/.config/waybar ~/pavilionx360/.config/
cp -r ~/.config/i3 ~/pavilionx360/.config/
cp -r ~/.config/i3status/ ~/pavilionx360/.config/
cp -r ~/.config/kitty ~/pavilionx360/.config/
cp -r ~/.config/picom ~/pavilionx360/.config/
cp -r ~/.config/polybar ~/pavilionx360/.config/
cp ~/.config/rofi/config.rasi ~/pavilionx360/.config/rofi
cp ~/.config/rofi/onedark.rasi ~/pavilionx360/.config/rofi
cp ~/.config/rofi/scripts/edit_notes.sh ~/pavilionx360/.config/rofi/scripts
cp ~/.config/rofi/scripts/compile_notes.sh ~/pavilionx360/.config/rofi/scripts
cp ~/.config/rofi/scripts/create_card.sh ~/pavilionx360/.config/rofi/scripts
